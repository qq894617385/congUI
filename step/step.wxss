@import "../icon/iconfont.wxss";

.contant {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    width: 100%;
    height: 35rpx;
}

.step-contant {
    display: flex;
    align-items: center;
    flex: 1;
    height: 100%;
}

.progress {
    flex: 1;
    height: 4rpx;
    background-color: #f5f5f5;
}

.icon-contant {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10rpx;
    width: 35rpx;
    height: 100%;
    border-radius: 50%;
    animation: icon 1s;
}

@keyframes icon {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

i {
    color: white;
}

.cover {
    width: 0%;
    height: 100%;
    animation: cover 1s;
    animation-fill-mode: forwards;
    background-color: skyblue;
}

@keyframes cover {
    form {
        width: 0%;
    }

    to {
        width: 100%;
    }
}
/* pages/test/congUI/cards/cards.wxss */
@import "../icon/iconfont.wxss";

.contant {
    padding: 0 20rpx;
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    transition: background 0.1s;
}

.contant:active {
    background-color: #f5f5f5;
}

.box {
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    border-bottom: 2rpx solid #d9d9d9;
}

.text {
    flex: 1;
}

.icon-contant {
    display: flex;
    align-items: center;
    width: 100px;
    height: 100%;
    color: #8c8c8c;
}

.icon-text {
    text-align: end;
    flex: 1;
}